border-top(a1, a2, a3)
  border-top-width a1
  border-top-style a2
  border-top-color a3

transitions(a1, a2, a3)
  transition-property a1
  transition-duration a2
  transition-timing-function a3
  -webkit-transition-property a1
  -webkit-transition-duration a2
  -webkit-transition-timing-function a3
  -moz-transition-property a1
  -moz-transition-duration a2
  -moz-transition-timing-function a3

